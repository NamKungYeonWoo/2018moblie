<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">



    <LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/background"
    android:layout_height="match_parent">

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/loginWhite"
        android:text="아이디"
       />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/signupIDEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="아이디"
        android:layout_weight="3"
        />

    <Button
        android:id="@+id/signupIDCheckButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/loginButton"
        android:text="아이디 확인"
        android:textColor="@color/loginWhite"
        android:layout_weight="1"/>
</LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/loginWhite"
        android:text="패스워드"/>

    <EditText
        android:id="@+id/signupPasswordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        />

    <TextView
        android:id="@+id/signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/loginWhite"
        android:text="패스워드 재입력"/>

    <EditText
        android:id="@+id/signupRePasswordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디를 확인하고 회원가입 하십시오. "
            />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/signupSignpButton"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@color/loginButton"
            android:layout_margin="5dp"
            android:text="회원가입"
            android:textColor="@color/loginWhite"

            />

        <Button
            android:id="@+id/signupCancleButton"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@color/loginButton"
            android:text="취소"
            android:textColor="@color/loginWhite"

            />

    </LinearLayout>



</LinearLayout>
    <RelativeLayout
        android:id="@+id/SignUpLodingView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#a6000000"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="서버와 연결중입니다."
            style="@style/ContentMainBadgeTitle"
            android:textSize="30dp"/>

    </RelativeLayout>

</RelativeLayout>